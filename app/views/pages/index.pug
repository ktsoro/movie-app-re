extends ../layout

block content
	.container
		.row
			each item in movies
				.col-md-3
					.thumbnail
						a(href='/movie/'+item._id) 
							img(src=item.poster,alt=item.title,width=auto,height=auto)
						.caption
							h3.text-center #{item.title}
							p.text-center: a.btn.btn-primary(href=`/movie/${item._id}`,role="button") 观看预告片