extends ../layout.pug

block content
    .container
        .row
            table.table.table-bordered.table-hover
                thead#thead
                    tr.movie-info-title
                        th 电影名称
                        th 导演
                        th 国家
                        th 语言
                        th 上映年份
                        th 录入时间
                        th 更新时间
                        th 查看详情
                        th 修改内容
                        th 删除
                each item in movies
                    tbody#tbody
                        tr(class="item-id-"+item._id)
                            td #{item.title}
                            td #{item.directer}
                            td #{item.country}
                            td #{item.language}
                            td #{item.year}
                            td #{moment(item.meta.createAt).format('MM/DD/YYYY HH:MM:SS')}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY HH:MM:SS')}
                            td:  a(target="_blank",href="../movie/"+item._id) 查看
                            td:  a(target="_blank",href="./update/"+item._id) 修改
                            td 
                                button.btn.btn-danger.btn-sm.del(type="button", data-id=item._id) 删除
    script(src="../../js/remove.js")